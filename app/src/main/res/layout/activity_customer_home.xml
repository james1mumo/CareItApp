<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer.CustomerHomeActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:width="450dp"
            android:id="@+id/customerHome">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="350dp"
                    android:textAlignment="center"
                    android:layout_margin="20dp"
                    android:text="Enter Service Description"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:layout_marginLeft="20dp"
                    android:width="350dp"
                    android:id="@+id/serviceDesc"
                    android:hint="Enter Service Description"
                    android:background="@drawable/edit_texts"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:width="350dp"
                    android:layout_margin="20dp"
                    android:textColor="@color/black"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:layout_marginLeft="20dp"
                android:width="350dp"
                android:id="@+id/serviceLocation"
                android:hint="Enter Service Description"
                android:background="@drawable/edit_texts"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Service Image Desccription"
                android:width="350dp"
                android:textAlignment="center"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="218dp"
                android:layout_height="162dp"
                android:layout_marginVertical="20dp"
                android:layout_marginLeft="60dp"
                app:srcCompat="@drawable/logo" />
                <Button
                    android:id="@+id/chooseBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose Image"
                    android:background="@drawable/buttons"
                    android:layout_gravity="center"
                    tools:layout_editor_absoluteX="158dp"
                    tools:layout_editor_absoluteY="559dp" />
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:id="@+id/uploadBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customerHome"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="20sp"
            android:background="@drawable/buttons"/>
</androidx.constraintlayout.widget.ConstraintLayout>