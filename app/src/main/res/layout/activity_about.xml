<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".AboutActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginVertical="32dp"
            android:paddingBottom="64dp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="32dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_margin="16dp"
                        android:src="@drawable/pic_profile" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:padding="16dp"
                        android:text="These are the objectives of our project:"
                        android:textColor="@color/purple_700"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="1.Linking customers to service providers "
                        android:textColor="@color/black"
                        android:textSize="19sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="2. Payment through M-PESA"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="3.Chatting between customer and service provider"
                        android:textColor="@color/black"
                        android:textSize="19sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="4. Uploading the image of what customer needs to be repaired"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="32dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/pic_paul_brian"
                        android:layout_gravity="center"
                        android:layout_margin="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:padding="16dp"
                        android:text="Paul Brian"
                        android:textColor="@color/black"
                        android:textSize="32sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="C026-01-1350/2019"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/purple_700"
                        android:padding="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="3"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/paul_whatsapp"
                            android:layout_width="match_parent"
                            android:layout_weight="1"

                            android:src="@drawable/icon_whatsapp"
                            android:onClick="launchWhatsApp"
                            android:layout_height="50dp"/>
                        <ImageView
                            android:id="@+id/paul_phone"
                            android:src="@drawable/icon_phone"
                            android:onClick="launchPhone"
                            android:layout_width="match_parent"

                            android:layout_weight="1"
                            android:layout_height="50dp"/>
                        <ImageView
                            android:id="@+id/paul_gmail"
                            android:layout_width="match_parent"

                            android:src="@drawable/icon_gmail"
                            android:onClick="launchGmail"
                            android:layout_weight="1"
                            android:layout_height="50dp"/>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="32dp"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="8dp"
                app:cardElevation="3dp"
                android:layout_marginHorizontal="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/pic_nzangi_muoki"
                        android:layout_gravity="center"
                        android:layout_margin="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:padding="16dp"
                        android:text="Nzangi Muoki"
                        android:textColor="@color/black"
                        android:textSize="32sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="C026-01-1305/2019"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/purple_700"
                        android:padding="16dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="3"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/nzangi_whatsapp"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            
                            android:src="@drawable/icon_whatsapp"
                            android:onClick="launchWhatsApp"
                            android:layout_height="50dp"/>
                        <ImageView
                            android:id="@+id/nzangi_phone"
                            android:src="@drawable/icon_phone"
                            android:onClick="launchPhone"
                            
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="50dp"/>
                        <ImageView
                            android:id="@+id/nzangi_gmail"
                            android:layout_width="match_parent"
                            android:src="@drawable/icon_gmail"
                            android:onClick="launchGmail"
                            android:layout_weight="1"
                            android:layout_height="50dp"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="32dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                android:layout_marginHorizontal="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/pic_victor"
                        android:layout_gravity="center"
                        android:layout_margin="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:padding="16dp"
                        android:text="Victor Nd'ungu"
                        android:textColor="@color/black"
                        android:textSize="32sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="C026-01-1273/2019"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/purple_700"
                        android:padding="16dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="3"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/victor_whatsapp"
                            android:layout_width="match_parent"
                            
                            android:layout_weight="1"
                            android:src="@drawable/icon_whatsapp"
                            android:onClick="launchWhatsApp"
                            android:layout_height="50dp"/>
                        <ImageView
                            android:id="@+id/victor_phone"
                            android:src="@drawable/icon_phone"
                            android:onClick="launchPhone"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            
                            android:layout_height="50dp"/>
                        <ImageView
                            
                            android:id="@+id/victor_gmail"
                            android:layout_width="match_parent"
                            android:src="@drawable/icon_gmail"
                            android:onClick="launchGmail"
                            android:layout_weight="1"
                            android:layout_height="50dp"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="32dp"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="8dp"
                app:cardElevation="3dp"
                android:layout_marginHorizontal="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/pic_musili"
                        android:layout_gravity="center"
                        android:layout_margin="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:padding="16dp"
                        android:text="Brian Musili"
                        android:textColor="@color/black"
                        android:textSize="32sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="C026-01-1304/2019"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/purple_700"
                        android:padding="16dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="3"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/musili_whatsapp"
                            android:layout_width="match_parent"
                            
                            android:layout_weight="1"
                            android:src="@drawable/icon_whatsapp"
                            android:onClick="launchWhatsApp"
                            android:layout_height="50dp"/>
                        <ImageView
                            android:id="@+id/musili_phone"
                            android:src="@drawable/icon_phone"
                            android:onClick="launchPhone"
                            
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="50dp"/>
                        <ImageView
                            android:id="@+id/musili_gmail"
                            
                            android:layout_width="match_parent"
                            android:src="@drawable/icon_gmail"
                            android:onClick="launchGmail"
                            android:layout_weight="1"
                            android:layout_height="50dp"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="32dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/pic_james_mumo"
                        android:layout_gravity="center"
                        android:layout_margin="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:padding="16dp"
                        android:text="James Mumo"
                        android:textColor="@color/black"
                        android:textSize="32sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="C026-01-0303/2018"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/purple_700"
                        android:padding="16dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="3"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/james_whatsapp"
                            android:layout_width="match_parent"
                            
                            android:layout_weight="1"
                            android:src="@drawable/icon_whatsapp"
                            android:onClick="launchWhatsApp"
                            android:layout_height="50dp"/>
                        <ImageView
                            android:id="@+id/james_phone"
                            
                            android:src="@drawable/icon_phone"
                            android:onClick="launchPhone"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="50dp"/>
                        <ImageView
                            android:id="@+id/james_gmail"
                            
                            android:layout_width="match_parent"
                            android:src="@drawable/icon_gmail"
                            android:onClick="launchGmail"
                            android:layout_weight="1"
                            android:layout_height="50dp"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>